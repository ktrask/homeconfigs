
set nocp
set autoindent
set smartindent
set backspace=2
set backup
set cmdheight=2
set completeopt=menuone,longest
set encoding=utf-8
set history=500
set hlsearch
set incsearch
set ignorecase
set smartcase

set ruler
set showmatch
set softtabstop=4
set wrap
syntax on
filetype on
set foldmethod=indent
set nofoldenable
set background=dark
hi Comment      ctermfg=darkgrey

"set runtimepath="/usr/share/vim/vimfiles/plugin/"

set rtp^="/usr/share/vim/vimfiles/plugin/"

